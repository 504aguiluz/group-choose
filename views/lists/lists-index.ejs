<%- include('../partials/header.ejs') %> 
    
<title>all lists</title>

<h1 class="display-6 index-heading">lists</h1>
<table class="table table-dark table-hover table-bordered table-sm">
    <tr class="align-bottom">
        <th>list name:</th>
        <th>submitted by:</th>
        <th>date created:</th>
        <th></th>
        <th></th>
    </tr>
<% for(let i = 0; i < lists.length; i++) { %>
<tr class="align-bottom">
    <td> <a href="/lists/<%=lists[i].id%>"> <%= lists[i].name %></a></td>
    <td><%= lists[i].submittedBy %></td>
    <td><%= lists[i].createdAt %></td>
    <td>
        <a href="/lists/<%= lists[i].id %>/edit"><button class="btn btn-outline-secondary">edit</button></a>
    </td>
    <td>
        <form action="/lists/<%= lists[i].id%>?_method=DELETE" method="POST">
            <input type="submit" value="delete" class="btn btn-outline-secondary">
        </form>
    </td>
</tr>
    
<% } %> 
</table>
