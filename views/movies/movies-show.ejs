<%- include('../partials/header.ejs') %> 
    
    <title><%= movie.title %></title>
    <h1><%= movie.title %></h1>
    <table class="table table-dark table-hover table-bordered table-sm">
        <tr class="align-bottom">
            <th>genre:</th>
            <th>yearMade:</th>
            <th>director:</th>
            <th>tags:</th>
            <th>submittedBy:</th>
            <th>rating:</th>
            <th>edit:</th>
            <th>add to list:</th>
            <th>delete:</th>
        </tr>
        <tr class="align-bottom">
            <td><%=movie.genre%></td>
            <td><%=movie.yearMade%></td>
            <td><%=movie.director%></td>
            <td><%=movie.tags%></td>
            <td><%=movie.submittedBy%></td>
            <td><%=movie.rating%></td>
        <td>
            <a href="/movies/<%= movie.id %>/edit"><button class="btn btn-outline-secondary">edit</button></a>
            <td>  
                <form action="/lists/addtolist" method="POST">
                        <select name="listId" class="form-select form-select-sm">
                            <option value="1">select list</option>
                            <% for( let i = 0; i < lists.length; i++){ %> 
                                <option value="<%= lists[i].id%>">
                                    <%= lists[i].name %> 
                                </option>
                                <% } %> 
                        </select>
                        <input type="hidden" value="<%= movie.id %>" name="movieId">
                        <input type="submit" value="add to list" class="btn btn-outline-secondary">
                </form>
            </td>
            <td>
                <form action="/movies/<%= movie.id%>?_method=DELETE" method="POST">
                    <input type="submit" value="delete" class="btn btn-outline-secondary">
                </form>
            </td>
        </td>
        </tr>
    </table>
<%- include('../partials/footer.ejs') %>   